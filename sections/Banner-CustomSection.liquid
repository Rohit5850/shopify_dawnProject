

<div class="custom-banner-section page-width">

  <div class="banner_section_content">
    <div class="image_cstmBanner">
      {% if section.settings.bannerImg != blank %}
    <img src={{ section.settings.bannerImg | img_url: 'original' }}  alt="img_1"/>
        {% endif %}
      {% if section.settings.bgBannerImg  != blank %}
      <div class="bg_customBanner">
        <img src={{ section.settings.bgBannerImg | img_url: 'master' }}  alt="img_2"/>
      </div>
        {% endif %}
    </div>

    <div class="text-section">
      {% if section.settings.bannerText != blank %}
      <p>{{ section.settings.bannerText }}</p>
        {% endif %}
      {% if section.settings.btnText1 != blank %}
      <div class="banner_btn">
        {% if section.settings.btnUrl1 != blank %}
        <a href="{{ section.settings.btnUrl1 }}"><button class="cstn_btn_primery">{{ section.settings.btnText1 }}</button></a>
          {% endif %}
         {% if section.settings.btnUrl2 != blank %}
        <a href="{{ section.settings.btnUrl2 }}"><button class="cstn_btn_secondary">{{ section.settings.btnText2 }} </button></a>
        {% endif %}
      </div>
        {% endif %}
    </div>
  </div>
  
</div>

<style>
.image_cstmBanner, .banner_section_content {
    position: relative;
}
  .bg_customBanner {
    position: absolute;
    bottom: 0;
    width: 100%;
    line-height: 0;
}
  .text-section {
    position: absolute;
    top: 0;
    right: 30px;
    width: 332px;
}
  .text-section p {
    color: white;
    font-size: 14px;
    line-height: 24px;
}


  .image_cstmBanner img {
    height: 636px;
    object-fit: cover;
    border-radius: 40px;
}

  .bg_customBanner img {
    height: 236px;
    object-fit: contain;
    line-height: 0;
    bottom: 0;
}
  .banner_btn {
    display: flex;
    gap: 10px;
}
  .cstn_btn_primery {
    /* max-width: 160px; */
    min-width: 160px;
    min-height: 48px;
    background: transparent;
    border: 1px solid white;
    border-radius: 12px;
    color: white;
    cursor: pointer;
}
  .cstn_btn_secondary {
    min-width: 140px;
    min-height: 48px;
    background: transparent;
    border: 1px solid white;
    border-radius: 12px;
    color: white;
    cursor: pointer;
    background: gray;
    border: 0;
}

  .collection__title {
    display: flex;
    justify-content: space-between;
}
  
</style>



{% schema %}
{
  "name": "Custom Banner Section",
  "tag": "section",
  "class": "cstm_banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bannerImg",
      "label": "Banner Image"
    },
     {
      "type": "image_picker",
      "id": "bgBannerImg",
      "label": "Background Banner Image"
    },
    {
      "type": "text",
      "id":"bannerText",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "btnUrl1",
      "label": "Button Url 1"
    },
     {
      "type": "text",
      "id":"btnText1",
      "label": "Button Lablel 1"
    },
     {
      "type": "url",
      "id": "btnUrl2",
      "label": "Button Url 2"
    },
     {
      "type": "text",
      "id":"btnText2",
      "label": "Button Lablel 2"
    }
    
  ]
,
  "presets": [
    {
      "name": "Custom Banner Section",
      "settings": {
      }
    }
  ]

}
{% endschema %}